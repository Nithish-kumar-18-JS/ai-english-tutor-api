{
  "compilerOptions": {
    "target": "ES2023",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src",

    /* Strict Type-Checking */
    "strict": true,
    "noImplicitAny": true,            // keep strict but fix implicit any in code
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,

    /* Decorators for NestJS */
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,

    /* Module resolution and JSON/JS support */
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "checkJs": false,
    "resolveJsonModule": true,

    /* Debugging & Build */
    "sourceMap": true,
    "incremental": true,
    "declaration": true,
    "removeComments": true,

    /* Path aliases to fix TS2307 imports */
    "baseUrl": "./",
    "paths": {
      "src/*": ["src/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
